<?xml version="1.0" encoding="utf-8" ?>
<local:BaseContentView
    x:Class="VisitTracker.ImageVerticalListControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VisitTracker"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    x:Name="this">

    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid Margin="0,10,0,0">

                <VerticalStackLayout IsVisible="{Binding IsBusy, Converter={StaticResource NotConverter}, Source={x:Reference this}}" Spacing="10">

                    <HorizontalStackLayout
                        BindableLayout.ItemsSource="{Binding AttachmentList, Mode=TwoWay, Source={x:Reference this}}"
                        HorizontalOptions="End"
                        IsVisible="{Binding AttachmentList, Converter={StaticResource IsListNotNullOrEmptyConverter}, Source={x:Reference this}}"
                        Spacing="10">

                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="local:AttachmentDto">
                                <material:ButtonView
                                    Padding="5"
                                    Background="{StaticResource PanelColor}"
                                    CommandParameter="{Binding .}"
                                    Stroke="{StaticResource MainBorderColor}"
                                    TappedCommand="{Binding OpenAttachmentCommand, Source={x:Reference this}}">
                                    <Label
                                        FontFamily="MaterialCommunityIcons"
                                        FontSize="18"
                                        Text="{x:Static local:MaterialCommunityIconsFont.Image}"
                                        TextColor="{StaticResource TextColor}"
                                        VerticalTextAlignment="Center" />
                                </material:ButtonView>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </HorizontalStackLayout>

                    <Label
                        FontAttributes="Italic"
                        HorizontalTextAlignment="Center"
                        IsVisible="{Binding AttachmentList, Converter={StaticResource IsListNullOrEmptyConverter}, Source={x:Reference this}}"
                        Style="{StaticResource MutedTextStyles}"
                        Text="No image(s) found!" />
                </VerticalStackLayout>

                <local:CustomActivityIndicator IsBusy="{Binding IsBusy, Source={x:Reference this}}" IsVisible="{Binding IsBusy, Source={x:Reference this}}" />
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</local:BaseContentView>