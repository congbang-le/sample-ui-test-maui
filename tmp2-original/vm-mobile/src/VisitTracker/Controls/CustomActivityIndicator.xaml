<?xml version="1.0" encoding="utf-8" ?>
<local:BaseContentView
    x:Class="VisitTracker.CustomActivityIndicator"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VisitTracker"
    xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
    x:Name="CustomActivityInd"
    IsVisible="{Binding IsBusy}">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <VerticalStackLayout
                HorizontalOptions="Center"
                IsVisible="{Binding Source={x:Reference CustomActivityInd}, Path=IsBusy}"
                Spacing="15"
                VerticalOptions="Center">
                <skia:SKLottieView
                    HeightRequest="{Binding Source={x:Reference CustomActivityInd}, Path=HeightWidth}"
                    HorizontalOptions="Center"
                    RepeatCount="-1"
                    Scale="2.5"
                    Source="{Binding Source={x:Reference CustomActivityInd}, Path=SourceFile}"
                    VerticalOptions="Fill"
                    WidthRequest="{Binding Source={x:Reference CustomActivityInd}, Path=HeightWidth}" />

                <Label
                    FontSize="16"
                    HorizontalTextAlignment="Center"
                    Text="{Binding Source={x:Reference CustomActivityInd}, Path=BusyText}"
                    TextColor="{Binding Source={x:Reference CustomActivityInd}, Path=BusyTextColor}"
                    VerticalTextAlignment="Center" />
            </VerticalStackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</local:BaseContentView>