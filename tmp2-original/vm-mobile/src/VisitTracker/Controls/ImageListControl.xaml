<?xml version="1.0" encoding="utf-8" ?>
<local:BaseContentView
    x:Class="VisitTracker.ImageListControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VisitTracker"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="this">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid Margin="0,10,0,0">
                <VerticalStackLayout IsVisible="{Binding IsBusy, Converter={StaticResource NotConverter}, Source={x:Reference this}}" Spacing="10">
                    <Grid>
                        <VerticalStackLayout
                            BindableLayout.ItemsSource="{Binding AttachmentList, Mode=TwoWay, Source={x:Reference this}}"
                            IsVisible="{Binding AttachmentList, Converter={StaticResource IsListNotNullOrEmptyConverter}, Source={x:Reference this}}"
                            Spacing="10">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="local:AttachmentDto">
                                    <local:CardViewControl HasCardTitle="False">
                                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                                            <Label
                                                Grid.Column="0"
                                                FontAttributes="Bold"
                                                FontSize="14"
                                                LineBreakMode="TailTruncation"
                                                Text="{Binding AttachmentType}"
                                                TextColor="{StaticResource TextColor}"
                                                VerticalTextAlignment="Center" />

                                            <material:ButtonView
                                                Grid.Column="1"
                                                Padding="5"
                                                Background="{StaticResource PanelColor}"
                                                CommandParameter="{Binding .}"
                                                Stroke="{StaticResource MainBorderColor}"
                                                TappedCommand="{Binding OpenAttachmentCommand, Source={x:Reference this}}">
                                                <Label
                                                    FontFamily="MaterialCommunityIcons"
                                                    FontSize="18"
                                                    Text="{x:Static local:MaterialCommunityIconsFont.Eye}"
                                                    TextColor="{StaticResource TextColor}"
                                                    VerticalTextAlignment="Center" />
                                            </material:ButtonView>
                                        </Grid>
                                    </local:CardViewControl>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>

                        <Label
                            FontAttributes="Italic"
                            HorizontalTextAlignment="Center"
                            IsVisible="{Binding AttachmentList, Source={x:Reference this}, Converter={StaticResource IsListNullOrEmptyConverter}}"
                            Text="No image(s) found!" />
                    </Grid>
                </VerticalStackLayout>

                <local:CustomActivityIndicator IsBusy="{Binding IsBusy, Source={x:Reference this}}" IsVisible="{Binding IsBusy, Source={x:Reference this}}" />
            </Grid>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</local:BaseContentView>